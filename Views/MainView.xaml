                                              Text="{Binding PktNodeInfo.Owner}"
                                              FontSize="10"
                                              FontWeight="Medium"
                                              Foreground="#1F2937"
                                              TextWrapping="Wrap"
                                              FontFamily="Consolas"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <Border CornerRadius="8"
                                   Background="#F9FAFB"
                                   Padding="10,7"
                                   Margin="0,0,0,6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="Node Status:"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="#6B7280"
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8"
                                                Margin="0,0,6,0">
                                            <Ellipse.Fill>
                                                <MultiBinding Converter="{StaticResource NodeStatusToColorConverter}">
                                                    <Binding Path="PktNodeInfo.NodeStatus"/>
                                                    <Binding Path="HasOperationalStatus"/>
                                                </MultiBinding>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock FontSize="11"
                                                  FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource NodeStatusToTextConverter}">
                                                    <Binding Path="PktNodeInfo.NodeStatus"/>
                                                    <Binding Path="HasOperationalStatus"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource NodeStatusToColorConverter}">
                                                    <Binding Path="PktNodeInfo.NodeStatus"/>
                                                    <Binding Path="HasOperationalStatus"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                       CornerRadius="8"
                                       Background="#F9FAFB"
                                       Padding="10,7"
                                       Margin="0,0,3,0">
                                    <StackPanel>
                                        <TextBlock Text="Peer ID"
                                                  FontSize="10"
                                                  FontWeight="SemiBold"
                                                  Foreground="#6B7280"
                                                  Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding PktNodeInfo.PeerId}"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="#1F2937"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1"
                                       CornerRadius="8"
                                       Background="#F9FAFB"
                                       Padding="10,7"
                                       Margin="3,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Daily Yield"
                                                  FontSize="10"
                                                  FontWeight="SemiBold"
                                                  Foreground="#6B7280"
                                                  Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding PktNodeInfo.OperationalStatus.DailyYield, Converter={StaticResource HexYieldToDecimalConverter}, FallbackValue='N/A'}"
                                                  FontSize="11"
                                                  FontWeight="SemiBold"
                                                  Foreground="#1F2937"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                </StackPanel>
            </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20"
                Visibility="{Binding ShowServerControls, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                ShadowDepth="2"
                                Opacity="0.2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Server Controls"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Margin="0,0,0,15"/>

                <Button Height="40">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Style.Triggers>

                                <DataTrigger Binding="{Binding CurrentStatus}" Value="{x:Static models:WslServerStatus.Stopped}">
                                    <Setter Property="Content" Value="â–¶ Start Server"/>
                                    <Setter Property="Command" Value="{Binding StartServerCommand}"/>
                                    <Setter Property="Background" Value="#007ACC"/>
                                </DataTrigger>

                                <DataTrigger Binding="{Binding CurrentStatus}" Value="{x:Static models:WslServerStatus.Running}">
                                    <Setter Property="Content" Value="â¹ Stop Server"/>
                                    <Setter Property="Command" Value="{Binding StopServerCommand}"/>
                                    <Setter Property="Background" Value="#DC3545"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
