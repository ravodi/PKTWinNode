<Window x:Class="PKTWinNode.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PKTWinNode.Converters"
        mc:Ignorable="d"
        Title="Settings"
        Height="900"
        Width="950"
        MinHeight="900"
        MinWidth="950"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        Icon="/Assets/Logo.png">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ Settings"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="#333333"/>
            <TextBlock Text="Configure your PKT node settings"
                      FontSize="13"
                      Foreground="#999999"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="0"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                ShadowDepth="2"
                                Opacity="0.2"/>
            </Border.Effect>
            <TabControl Background="Transparent"
                       BorderThickness="0"
                       Padding="0"
                       TabStripPlacement="Top">
                <TabControl.Template>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <ItemsPresenter/>
                            </Grid>

                            <ContentPresenter Grid.Row="1"
                                            ContentSource="SelectedContent"
                                            Margin="0"/>
                        </Grid>
                    </ControlTemplate>
                </TabControl.Template>
                <TabControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </TabControl.ItemsPanel>
                <TabControl.Resources>

                    <Style TargetType="TabItem">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Padding="20,12"
                                           Margin="0"
                                           HorizontalAlignment="Stretch">
                                        <ContentPresenter ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#E5E5E5"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="ðŸ  General">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Padding="25">
                        <StackPanel>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Auto-start Server"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Automatically start the server when the application launches"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding AutoStartServer}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Use System Tray"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Minimize and close to the system tray instead of exiting the application"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding MinimizeToTray}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Run on Windows Startup"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Automatically launch PKTWinNode when Windows starts"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding RunOnStartup}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Stop WSL on Application Close"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Automatically stop the WSL distribution when PKTWinNode is closed"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding AutoStopWslOnClose}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Software Updates"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Check for and install the latest version of PKTWinNode"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                       Content="Check for Updates"
                                       Command="{Binding CheckForUpdatesCommand}"
                                       VerticalAlignment="Center"
                                       Height="40"
                                       MinWidth="150"
                                       Style="{StaticResource ModernButton}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="ðŸ”§ CJDNS Config">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Padding="25">
                        <StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                <Setter Property="ToolTip" Value="Peer ID cannot be changed after deployment. Delete the distribution to change this setting."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333">
                                    <Run Text="Peer ID"/>
                                    <Run Text=" *" Foreground="#DC3545" FontWeight="Bold"/>
                                </TextBlock>
                                <TextBlock Text="Your PKT peer ID for CJDNS network configuration"
                                          FontSize="12"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,8"/>
                                <Grid Height="37">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                           BorderThickness="1,1,0,1"
                                           CornerRadius="4,0,0,4"
                                           Padding="10,0,2,0"
                                           IsEnabled="{Binding IsDeploymentConfigEditable}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E9ECEF"/>
                                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="BorderBrush" Value="#D0D0D0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="PUB_PKT_"
                                                  FontSize="13"
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                            <Setter Property="Foreground" Value="#A0A0A0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>

                                    <TextBox Grid.Column="1"
                                            Text="{Binding PeerIdSuffix, UpdateSourceTrigger=PropertyChanged}"
                                            IsEnabled="{Binding IsDeploymentConfigEditable}"
                                            Padding="2,0,10,0"
                                            FontSize="13"
                                            BorderThickness="1"
                                            VerticalContentAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                   CornerRadius="0,4,4,0">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                            Margin="{TemplateBinding Padding}"
                                                                            VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="#A0A0A0"/>
                                                        <Setter Property="BorderBrush" Value="#D0D0D0"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PeerIdError, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="BorderBrush" Value="#DC3545"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Grid>
                                <TextBlock Text="{Binding PeerIdError}"
                                          FontSize="11"
                                          Foreground="#DC3545"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,0"
                                          Visibility="{Binding PeerIdError, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                <Setter Property="ToolTip" Value="CJDNS Port cannot be changed after deployment. Delete the distribution to change this setting."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333">
                                    <Run Text="CJDNS Port"/>
                                    <Run Text=" *" Foreground="#DC3545" FontWeight="Bold"/>
                                </TextBlock>
                                <TextBlock Text="Port number for CJDNS network configuration"
                                          FontSize="12"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,8"/>
                                <TextBox Text="{Binding CjdnsPort, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{Binding IsDeploymentConfigEditable}"
                                        Padding="10"
                                        FontSize="13"
                                        BorderThickness="1">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDeploymentConfigEditable}" Value="False">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                    <Setter Property="Foreground" Value="#A0A0A0"/>
                                                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding CjdnsPortError, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderBrush" Value="#DC3545"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Text="{Binding CjdnsPortError}"
                                          FontSize="11"
                                          Foreground="#DC3545"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,0"
                                          Visibility="{Binding CjdnsPortError, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="ðŸ§ WSL Config">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Padding="25">
                        <StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="WSL Username"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"/>
                                <TextBlock Text="Username for the WSL distribution (used during deployment)"
                                          FontSize="12"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,8"/>
                                <TextBox Text="{Binding WslUsername, UpdateSourceTrigger=PropertyChanged}"
                                        Padding="10"
                                        FontSize="13"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        IsEnabled="{Binding IsDistributionInstalled, Converter={StaticResource InverseBoolConverter}}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                    <Setter Property="Foreground" Value="#999999"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="WSL Password"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"/>
                                <TextBlock Text="Password for the WSL distribution (used during deployment)"
                                          FontSize="12"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,4,0,8"/>
                                <Grid>
                                    <PasswordBox x:Name="WslPasswordBox"
                                                Padding="10"
                                                FontSize="13"
                                                BorderBrush="#CCCCCC"
                                                BorderThickness="1"
                                                PasswordChanged="WslPasswordBox_OnPasswordChanged"
                                                Visibility="{Binding ShowPassword, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                IsEnabled="{Binding IsDistributionInstalled, Converter={StaticResource InverseBoolConverter}}">
                                        <PasswordBox.Style>
                                            <Style TargetType="PasswordBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="#999999"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </PasswordBox.Style>
                                    </PasswordBox>
                                    <TextBox x:Name="WslPasswordTextBox"
                                            Text="{Binding WslPassword, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="10"
                                            FontSize="13"
                                            BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVisibilityConverter}}"
                                            IsEnabled="{Binding IsDistributionInstalled, Converter={StaticResource InverseBoolConverter}}">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="#999999"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Grid>
                                <CheckBox IsChecked="{Binding ShowPassword}"
                                         Content="Show password"
                                         FontSize="12"
                                         Foreground="#666666"
                                         Margin="0,8,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Automatic Maintenance"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,30,0,15"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Automatic Package Updates"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Automatically update Ubuntu packages to keep your system secure and up-to-date"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding EnableAutoPackageUpdates}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <StackPanel Margin="20,0,0,20"
                                       Visibility="{Binding EnableAutoPackageUpdates, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Update Interval (days)"
                                          FontSize="13"
                                          Foreground="#555555"
                                          Margin="0,0,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding PackageUpdateIntervalDays, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="13"
                                            BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            HorizontalContentAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                              Text="days"
                                              FontSize="13"
                                              Foreground="#666666"
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0"/>
                                </Grid>

                                <TextBlock Text="{Binding LastPackageUpdateText}"
                                          FontSize="11"
                                          Foreground="#999999"
                                          Margin="0,6,0,0"/>
                            </StackPanel>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Automatic WSL Restarts"
                                              FontSize="14"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="Automatically restart the WSL distribution to apply updates and refresh system state"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <CheckBox Grid.Column="1"
                                         IsChecked="{Binding EnableAutoWslRestart}"
                                         VerticalAlignment="Center"
                                         Width="20"
                                         Height="20"/>
                            </Grid>

                            <StackPanel Margin="20,0,0,20"
                                       Visibility="{Binding EnableAutoWslRestart, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Restart Interval (days)"
                                          FontSize="13"
                                          Foreground="#555555"
                                          Margin="0,0,0,6"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                            Text="{Binding WslRestartIntervalDays, UpdateSourceTrigger=PropertyChanged}"
                                            Padding="8"
                                            FontSize="13"
                                            BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            HorizontalContentAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                              Text="days"
                                              FontSize="13"
                                              Foreground="#666666"
                                              VerticalAlignment="Center"
                                              Margin="10,0,0,0"/>
                                </Grid>

                                <TextBlock Text="{Binding LastWslRestartText}"
                                          FontSize="11"
                                          Foreground="#999999"
                                          Margin="0,6,0,0"/>
                            </StackPanel>

                            <Border Background="#FFF3F3"
                                   BorderBrush="#DC3545"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="15"
                                   Margin="0,10,0,0"
                                   Visibility="{Binding IsDistributionInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="âš  Danger Zone"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#DC3545"
                                              Margin="0,0,0,10"/>
                                    <TextBlock Text="Delete WSL Distribution"
                                              FontSize="13"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"/>
                                    <TextBlock Text="This will permanently delete the WSL distribution and all its data. This action cannot be undone!"
                                              FontSize="12"
                                              Foreground="#666666"
                                              TextWrapping="Wrap"
                                              Margin="0,4,0,12"/>
                                    <Button Content="ðŸ—‘ Delete Distribution"
                                           Command="{Binding DeleteDistributionCommand}"
                                           HorizontalAlignment="Left"
                                           Height="36"
                                           MinWidth="180">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                                <Setter Property="Background" Value="#DC3545"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C82333"/>
