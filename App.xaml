<Application x:Class="PKTWinNode.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PKTWinNode"
             xmlns:converters="clr-namespace:PKTWinNode.Converters"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NodeStatusToTextConverter x:Key="NodeStatusToTextConverter"/>
        <converters:NodeStatusToColorConverter x:Key="NodeStatusToColorConverter"/>
        <converters:HexYieldToDecimalConverter x:Key="HexYieldToDecimalConverter"/>
    </Application.Resources>
</Application>
